<h1 class="text-center">記事の編集</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 article-new-form">
    <%= form_with(model: @article, local: true, multipart: true) do |f| %>
      <%= render 'articles/shared/error_messages' %>

        <div class="my-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="my-3">
            <%= f.label :content, class: "form-label" %>
            <%= f.text_area :content, class: "form-control" %>
        </div>

        <div class="my-3">
            <%= f.label :image, class: "form-label" %>
            <%= f.file_field :image, id: :article_image, class: "form-control" %>
        </div>

        <%= f.submit "更新する", class: "btn btn-primary btn-block" %>
    <% end %>
        <%= link_to "戻る", articles_path, class: "btn btn-warning my-3"  %>
  </div>
</div>
