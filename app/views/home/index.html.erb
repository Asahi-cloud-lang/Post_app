<!DOCTYPE html>
<html>
<head>
    <title>SimpleDevise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<header>
    <nav>
        <% if user_signed_in? %>
            <%= "こんにちは#{current_user.email}さん"  %><br>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-primary my-3" %>
        <% else %>
            <%= link_to 'サインアップ', new_user_registration_path, class: "btn btn-primary" %>
            <%= link_to 'ログイン', new_user_session_path, class: "btn btn-primary" %>
        <% end %>
    </nav>
</header>
<%= yield %>
</body>
</html>